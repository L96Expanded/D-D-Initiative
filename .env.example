# Database Configuration
POSTGRES_DB=dnd_tracker
POSTGRES_USER=dnd_user
POSTGRES_PASSWORD=changeme_secure_password_here

# Backend Configuration
DATABASE_URL=postgresql://dnd_user:changeme_secure_password_here@postgres:5432/dnd_tracker

# JWT Authentication
JWT_SECRET=changeme_your_jwt_secret_key_minimum_32_characters
SECRET_KEY=changeme_your_jwt_secret_key_minimum_32_characters
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# File Upload Settings
UPLOAD_DIR=/app/uploads
DATABASE_IMAGES_DIR=/app/database_images
MAX_FILE_SIZE=10485760

# Azure Storage (Optional - for production)
AZURE_STORAGE_CONNECTION_STRING=
AZURE_STORAGE_CONTAINER_NAME=creature-images

# Application Settings
ENVIRONMENT=development
APP_VERSION=1.0.1

# CORS and Security
CORS_ORIGINS=["http://localhost:3000","http://127.0.0.1:3000"]
ALLOWED_HOSTS=["localhost","127.0.0.1"]
